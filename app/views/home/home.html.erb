<% provide(:title, 'Home') %>
<% provide(:heading, 'Welcome to Money Management') %>

  <% if signed_in? %>
      <%= render 'shared/expense_form' %>
      <%= link_to "view my profile", current_user %>
      (<%= pluralize(current_user.expenses.count, "pending expenses")%>)
               <br/><br/>
    <blink> Coming soon! Share your expenses with friends and settle accounts online </blink>
  <%else%>
    <div class="pagination">
      Manage your accounts and expenditure by adding details of your spendings, earnings and accounts with friends/roommates! Its FREE!!<br/><br/>
    </div>
    <div class="pagination-centered">
      <%= link_to "Sign up immediately!!", signup_path, class: "btn" %>
    </div>
      <p>  <br/><br/>
        Existing user? <%= link_to "Sign in", signin_path %> to access your account details.<br/>
      </p>
   <%end%>

