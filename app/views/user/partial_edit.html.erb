<% provide(:title, 'Edit profile information') %>
<% provide(:heading, 'Edit Profile') %>
<div class="row">
  <div class="pagination">
    <%= form_for(@user) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :account, "Account number in bank" %>
        <%= f.number_field :account %>

        <%= f.label :cash, "Amount of cash" %>
        <%= f.number_field :cash %>

        <p>
          <%= f.submit "Edit my profile", class: "btn" %>
        </p>
    <% end %>
  </div>
</div>
